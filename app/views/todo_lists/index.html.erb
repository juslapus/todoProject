<p id="notice"><%= notice %></p>

<h1>Listing Todo Lists</h1>

<table>
  <thead>
    <tr>
      <th>List</th>
      <th>Description</th>
      <% if current_user == User.first %>
      <th>User</th>
      <% end %>
    </tr>
  </thead>

  <% if current_user %>
    <tbody>
      <% @todo_lists.each do |todo_list| %>
        <% if (current_user == todo_list.user) || (current_user == User.first) %>
          <tr>
            <td><%= todo_list.list %></td>
            <td><%= todo_list.description %></td>
            <% if (current_user == User.first) %>
              <td><%= todo_list.user.email %></td>
            <% end %>
            <td><%= link_to 'Show', todo_list %></td>
            <td><%= link_to 'Edit', edit_todo_list_path(todo_list) %></td>
            <td><%= link_to 'Destroy', todo_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  <% end %>
</table>

<br>

<% if current_user %>
  <%= link_to 'New Todo List', new_todo_list_path %>
<% end %>